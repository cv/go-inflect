#!/bin/bash
# Pre-commit hook: runs the same checks as CI

set -e

echo "ðŸ” Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Build
echo -n "ðŸ“¦ Building... "
if go build ./... 2>&1; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    echo "Build failed. Fix errors before committing."
    exit 1
fi

# Test (without -v for speed, no race detector for speed)
echo -n "ðŸ§ª Testing... "
if go test ./... 2>&1 > /dev/null; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    echo "Tests failed. Fix errors before committing."
    go test ./...
    exit 1
fi

# Lint
echo -n "ðŸ”¬ Linting... "
if golangci-lint run 2>&1 > /dev/null; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    echo "Linting failed. Fix errors before committing."
    golangci-lint run
    exit 1
fi

echo -e "${GREEN}âœ… All checks passed!${NC}"
